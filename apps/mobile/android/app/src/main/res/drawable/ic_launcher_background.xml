<?xml version="1.0" encoding="utf-8"?>
<!-- Optimized Background for Samsung/Legacy compatibility -->
<!-- Replaces Vector+AAPT with native Layer-List & Shape Gradient -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Layer 1: Base Deep Forest Color (#022c22) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#022c22"/>
        </shape>
    </item>
    
    <!-- Layer 2: Radial Glow Gradient -->
    <!-- Matches HTML: #6ee7b7 (Start) -> #10b981 (Center) -> #022c22 (End) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="70dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#CC6EE7B7"
                android:centerColor="#9910B981"
                android:endColor="#FF022C22"/>
        </shape>
    </item>
    
</layer-list>
